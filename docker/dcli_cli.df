FROM google/dart

WORKDIR /

ENV HOME=/home
ENV PATH="$PATH":"/home/.pub-cache/bin":"home/.dcli/bin"
RUN touch /home/.profile

RUN apt -y update
RUN apt -y install vim
RUN apt -y install procps
# RUN apt -y install coreutils


RUN pub global activate dcli 
RUN dcli install

RUN mkdir /home/dcli
WORKDIR /home/dcli
ADD READ.ME /home/dcli

# set the cli prompt.
RUN echo "PS1='\e[32mdcli\e[0m:\e[34m`pwd`#\e[0m '" >> /home/.bashrc

CMD []

ENTRYPOINT ["/bin/bash", "-c", "bash"] 


