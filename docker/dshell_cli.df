FROM google/dart

WORKDIR /

ENV HOME=/home
ENV PATH="$PATH":"/home/.pub-cache/bin":"home/.dshell/bin"
RUN touch /home/.profile

RUN apt -y update
RUN apt -y install vim
RUN apt -y install procps
# RUN apt -y install coreutils


RUN pub global activate dshell 
RUN dshell install

RUN mkdir /home/dshell
WORKDIR /home/dshell
ADD READ.ME /home/dshell

# set the cli prompt.
RUN echo "PS1='\e[32mdshell\e[0m:\e[34m`pwd`#\e[0m '" >> /home/.bashrc

CMD []

ENTRYPOINT ["/bin/bash", "-c", "bash"] 


